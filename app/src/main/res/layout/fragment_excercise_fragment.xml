<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4.25"
    android:id="@+id/main_dietcontainer"
    tools:context=".BegginnerLevel.fragment.Excercise_fragment">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        card_view:cardElevation="10dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/beforeexcercise"
            />
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2.86">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/dayonecontainer">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dayonecontainer"
                android:id="@+id/dietdaytwo_container">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dietdaytwo_container"
                android:id="@+id/dietdaythre_container">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dietdaythre_container"
                android:id="@+id/dietdayfour_container">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dietdayfour_container"
                android:id="@+id/dietdayfive_container">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dietdayfive_container"
                android:id="@+id/dietdaysix_container">
            </FrameLayout>
            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dietdaysix_container"
            android:id="@+id/dietdayseven_container">
        </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dietdayseven_container"
                android:id="@+id/dietdayeight_container">
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>