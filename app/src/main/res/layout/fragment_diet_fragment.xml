<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4.22"
    android:id="@+id/main_dietcontainer"
    tools:context=".BegginnerLevel.fragment.diet_fragment">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:layout_marginLeft="8dp"
        card_view:cardElevation="10dp"
        android:id="@+id/leg_container"
        android:layout_below="@id/chestExcercise_container"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="12dp">
   <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/balance_diet"
        android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_weight="3">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/dietone_container">
           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Day One"
               android:background="@drawable/qaiserlist"
               android:textSize="20dp"
               android:id="@+id/diet_dayone"
               android:gravity="center_vertical"
               android:paddingLeft="40dp"/>
       </FrameLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day Two"
            android:layout_marginTop="12dp"
            android:textSize="20dp"
            android:background="@drawable/qaiserlist"
            android:id="@+id/diet_daytwo"
            android:layout_below="@id/dietone_container"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>




        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Day Three"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/qaiserlist"
            android:id="@+id/diet_daythree"
            android:paddingLeft="40dp"
            android:layout_below="@id/diet_daytwo"
            android:gravity="center_vertical"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Day Four"
            android:layout_marginTop="12dp"
            android:textSize="20dp"
            android:background="@drawable/qaiserlist"
            android:id="@+id/diet_dayfour"
            android:layout_below="@id/diet_daythree"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/qaiserlist"
            android:text="Day Five"
            android:layout_marginTop="12dp"
            android:id="@+id/diet_dayfive"
            android:layout_below="@id/diet_dayfour"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/qaiserlist"
            android:text="Day Six"
            android:layout_marginTop="12dp"
            android:textSize="20dp"
            android:id="@+id/diet_daysix"
            android:layout_below="@id/diet_dayfive"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/qaiserlist"
            android:text="Day Seven"
            android:layout_marginTop="12dp"
            android:id="@+id/diet_dayseven"
            android:layout_below="@id/diet_daysix"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Day Eight"
            android:layout_marginTop="12dp"
            android:background="@drawable/qaiserlist"
            android:id="@+id/diet_dayeight"
            android:layout_below="@id/diet_dayseven"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>
   </RelativeLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>