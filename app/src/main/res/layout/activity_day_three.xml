<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/day_three_main_layout"
    android:weightSum="3.74"
    android:layout_height="match_parent"
    tools:context=".BegginnerLevel.fragment.ExcerciseActivity.All_Day_Excercise.DayThree">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_marginLeft="8dp"
        card_view:cardElevation="10dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/dayeight"
            />
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:id="@+id/burpee_pushup_conatiner"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/burpee_pushup_conatiner"
                android:id="@+id/camal_pose_container"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/camal_pose_container"
                android:id="@+id/chest_stretch_container"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/chest_stretch_container"
                android:id="@+id/chest_tap_pushup_container"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/chest_tap_pushup_container"
                android:id="@+id/child_pose_extented_container"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/child_pose_extented_container"
                android:id="@+id/clap_knee_push_up_container"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/clap_knee_push_up_container"
                android:id="@+id/cocoons_contianer"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cocoons_contianer"
                android:id="@+id/cross_knee_tricep_extension_container"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cross_knee_tricep_extension_container"
                android:id="@+id/decline_wide_pushup_container"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.34">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Setting"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:id="@+id/settingbtn"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    android:background="@drawable/rountbtn"
                    />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Go"
                    android:id="@+id/day_three_startbtn"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:background="@drawable/rountbtn"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.appcompat.widget.LinearLayoutCompat>